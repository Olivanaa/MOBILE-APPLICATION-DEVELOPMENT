<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/viewEscolhaApp"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_gravity="center"
        android:layout_margin="120dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/viewUm"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_weight="1"
            android:text="1"
            android:textAlignment="center"
            android:textSize="70dp"
            />
        <TextView
            android:id="@+id/viewDois"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_weight="1"
            android:text="2"
            android:textAlignment="center"
            android:textSize="70dp"/>
        <TextView
            android:id="@+id/viewTres"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_weight="1"
            android:text="3"
            android:textAlignment="center"
            android:textSize="70dp"/>
        <TextView
            android:id="@+id/viewQuatro"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_weight="1"
            android:text="4"
            android:textAlignment="center"
            android:textSize="70dp"/>
        <TextView
            android:id="@+id/viewCinco"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_weight="1"
            android:text="5"
            android:textAlignment="center"
            android:textSize="70dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp">

        <Button
            android:id="@+id/viewPar"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_weight="1"
            android:text="PAR"
            android:textSize="40dp"/>
        <Button
            android:id="@+id/viewImpar"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_weight="1"
            android:text="IMPAR"
            android:textSize="40dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_margin="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/viewResultado"
            android:layout_width="88dp"
            android:layout_height="88dp"/>

    </LinearLayout>


</LinearLayout>